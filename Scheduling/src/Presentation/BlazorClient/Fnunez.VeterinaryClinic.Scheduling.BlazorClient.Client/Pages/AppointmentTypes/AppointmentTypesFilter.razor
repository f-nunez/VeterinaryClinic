@inherits Fnunez.VeterinaryClinic.Scheduling.BlazorClient.Client.Pages.AppointmentTypes.AppointmentTypesFilterComponent

<div class="container">
    <div class="row mb-3">
        <RadzenText
            TagName="TagName.H3"
            Text="Id"
            TextStyle="TextStyle.Subtitle2">
        </RadzenText>

        <RadzenAutoComplete
            @bind-Value=@IdFilterValue
            @oninput=@OnChangeId
            Class="w-100"
            Data=@AppointmentTypeIds
            FilterDelay="500"
            LoadData=@LoadDataAppointmentTypesFilterId
            Placeholder="Select an id...">
        </RadzenAutoComplete>
    </div>

    <div class="row mb-3">
        <RadzenText
            TagName="TagName.H3"
            Text="Name"
            TextStyle="TextStyle.Subtitle2">
        </RadzenText>

        <RadzenAutoComplete
            @bind-Value=@NameFilterValue
            @oninput=@OnChangeName
            Class="w-100"
            Data=@AppointmentTypeNames
            FilterDelay="500"
            LoadData=@LoadDataAppointmentTypesFilterName
            Placeholder="Select a name...">
        </RadzenAutoComplete>
    </div>

    <div class="row mb-3">
        <RadzenText
            TagName="TagName.H3"
            Text="Code"
            TextStyle="TextStyle.Subtitle2">
        </RadzenText>

        <RadzenAutoComplete
            @bind-Value=@CodeFilterValue
            @oninput=@OnChangeCode
            Class="w-100"
            Data=@AppointmentTypeCodes
            FilterDelay="500"
            LoadData=@LoadDataAppointmentTypesFilterCode
            Placeholder="Select a code...">
        </RadzenAutoComplete>
    </div>

    <div class="row mb-4">
        <RadzenText
            TagName="TagName.H3"
            Text="Duration"
            TextStyle="TextStyle.Subtitle2">
        </RadzenText>

        <RadzenAutoComplete
            @bind-Value=@DurationFilterValue
            @oninput=@OnChangeDuration
            Class="w-100"
            Data=@AppointmentTypeDurations
            FilterDelay="500"
            LoadData=@LoadDataAppointmentTypesFilterDuration
            Placeholder="Select a duration...">
        </RadzenAutoComplete>
    </div>

    <div class="row">
        <div class="col-6 pl-0 pr-2">
            <RadzenButton
                ButtonStyle="ButtonStyle.Secondary"
                Class="w-100"
                Click=@OnClickButtonFilter
                Shade="Shade.Lighter"
                Text="FILTER">
            </RadzenButton>
        </div>

        <div class="col-6 pl-2 pr-0">
            <RadzenButton
                ButtonStyle="ButtonStyle.Light"
                Class="w-100"
                Click=@OnClickButtonClean
                Shade="Shade.Lighter"
                Text="CLEAN">
            </RadzenButton>
        </div>
    </div>
</div>