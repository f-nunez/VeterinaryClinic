@page "/doctors"
@layout Fnunez.VeterinaryClinic.Scheduling.BlazorClient.Client.Shared.MainLayout
@inherits Fnunez.VeterinaryClinic.Scheduling.BlazorClient.Client.Pages.Doctors.DoctorsComponent

@using Application.SharedModel.Doctor
@using Fnunez.VeterinaryClinic.Scheduling.BlazorClient.Client.Shared.Components.RadzenTextBoxSearch
@using Radzen
@using Radzen.Blazor

<RadzenHeading
    Size="H1"
    Text=@StringLocalizer["Doctors_Title"]>
</RadzenHeading>

<RadzenCard>
    <div class="row mb-3">
        <div class="col-12 col-sm-4 col-md-6 col-lg-7 col-xl-8"></div>

        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="datagrid-filter-menu">
                <RadzenTextBoxSearchComponent
                    @bind-Value=@SearchFilterValue
                    @onkeyup=@OnKeyUpFilterSearch
                    AutoComplete="false"
                    Click=@OnClickFilterSearch
                    Placeholder=@StringLocalizer["Doctors_Grid_Filter_PlaceHolder_Search"]>
                </RadzenTextBoxSearchComponent>

                <RadzenButton
                    ButtonStyle="ButtonStyle.Secondary"
                    Click=@OpenFilterMenu
                    Icon="filter_list">
                </RadzenButton>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <RadzenDataGrid @ref=@DoctorsGrid
                AllowPaging="true"
                AllowSorting="true"
                Count=@Count
                Data=@Doctors
                IsLoading=@IsLoading
                LoadData=@LoadData
                PagerHorizontalAlign="HorizontalAlign.Center"
                PageSize="10"
                PageSizeOptions="@PageSizeOptions"
                PageSizeText=@StringLocalizer["Doctors_Grid_PageSizeText"]
                PagingSummaryFormat=@StringLocalizer["Doctors_Grid_PagingSummaryFormat"]
                ShowPagingSummary="true"
                TItem="DoctorDto">
                <Columns>
                    <RadzenDataGridColumn
                        Filterable="true"
                        Property="Id"
                        Sortable="true"
                        SortOrder="SortOrder.Ascending"
                        TextAlign="TextAlign.Left"
                        TItem="DoctorDto"
                        Title=@StringLocalizer["Doctors_Grid_Column_Header_Id"]>
                    </RadzenDataGridColumn>

                    <RadzenDataGridColumn
                        Filterable="true"
                        Property="FullName"
                        Sortable="true"
                        TextAlign="TextAlign.Justify"
                        TItem="DoctorDto"
                        Title=@StringLocalizer["Doctors_Grid_Column_Header_FullName"]>
                    </RadzenDataGridColumn>
                </Columns>
            </RadzenDataGrid>
        </div>
    </div>
</RadzenCard>