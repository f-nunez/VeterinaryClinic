@inherits Fnunez.VeterinaryClinic.Scheduling.BlazorClient.Client.Pages.Clinics.ClinicDetailComponent

<div class="row">
    <div class="col-12">
        <RadzenText
            Class="rz-color-primary-light"
            Text=@StringLocalizer["ClinicDetail_Label_Name"]
            TextStyle="TextStyle.Overline">
        </RadzenText>

        <RadzenText
            TextStyle="TextStyle.Body1">
            <b>@Model.Name</b>
        </RadzenText>
    </div>

    <div class="col-12">
        <RadzenText
            Class="rz-color-primary-light"
            Text=@StringLocalizer["ClinicDetail_Label_Address"]
            TextStyle="TextStyle.Overline">
        </RadzenText>

        <RadzenText
            TextStyle="TextStyle.Body1">
            <b>@Model.Address</b>
        </RadzenText>
    </div>

    <div class="col-12">
        <RadzenText
            Class="rz-color-primary-light"
            Text=@StringLocalizer["ClinicDetail_Label_EmailAddress"]
            TextStyle="TextStyle.Overline">
        </RadzenText>

        <RadzenText
            TextStyle="TextStyle.Body1">
            <b>@Model.EmailAddress</b>
        </RadzenText>
    </div>
</div>

<div class="row mt-2">
    <div class="col-12">
        <RadzenButton
            ButtonStyle="ButtonStyle.Primary"
            ButtonType="ButtonType.Submit"
            Class="w-100"
            Click=@OnClickAccept
            Variant="Variant.Text">
            @StringLocalizer["ClinicDetail_Button_Accept"]
        </RadzenButton>
    </div>
</div>