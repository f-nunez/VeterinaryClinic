@inherits Fnunez.VeterinaryClinic.Scheduling.BlazorClient.Client.Pages.Rooms.RoomsFilterComponent

<div class="container">
    <div class="row mb-3">
        <RadzenText
            TagName="TagName.H3"
            Text=@StringLocalizer["RoomsFilter_Label_Id"]
            TextStyle="TextStyle.Subtitle2">
        </RadzenText>

        <RadzenAutoComplete
            @bind-Value=@IdFilterValue
            @oninput=@OnChangeId
            Class="w-100"
            Data=@RoomIds
            FilterDelay="500"
            LoadData=@LoadDataRoomsFilterId
            Placeholder=@StringLocalizer["RoomsFilter_AutoComplete_PlaceHolder_Id"]>
        </RadzenAutoComplete>
    </div>

    <div class="row mb-4">
        <RadzenText
            TagName="TagName.H3"
            Text=@StringLocalizer["RoomsFilter_Label_Name"]
            TextStyle="TextStyle.Subtitle2">
        </RadzenText>

        <RadzenAutoComplete
            @bind-Value=@NameFilterValue
            @oninput=@OnChangeName
            Class="w-100"
            Data=@RoomNames
            FilterDelay="500"
            LoadData=@LoadDataRoomsFilterName
            Placeholder=@StringLocalizer["RoomsFilter_AutoComplete_PlaceHolder_Name"]>
        </RadzenAutoComplete>
    </div>

    <div class="row">
        <div class="col-6 pl-0 pr-2">
            <RadzenButton
                ButtonStyle="ButtonStyle.Secondary"
                Class="w-100"
                Click=@OnClickButtonFilter
                Shade="Shade.Lighter"
                Text=@StringLocalizer["RoomsFilter_Button_Filter"]>
            </RadzenButton>
        </div>

        <div class="col-6 pl-2 pr-0">
            <RadzenButton
                ButtonStyle="ButtonStyle.Light"
                Class="w-100"
                Click=@OnClickButtonClean
                Shade="Shade.Lighter"
                Text=@StringLocalizer["RoomsFilter_Button_Clear"]>
            </RadzenButton>
        </div>
    </div>
</div>