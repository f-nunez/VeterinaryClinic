@inherits Fnunez.VeterinaryClinic.ClinicManagement.BlazorClient.Client.Pages.Doctors.AddEditDoctorComponent

@using Radzen.Blazor
@using ViewModels.Doctors

<RadzenTemplateForm
    Data="@Model"
    Submit=@OnSubmit
    TItem="DoctorVm">

    <div class="row mb-3">
        <div class="col-12">
            <div class="row mb-3">
                <div class="col-12">
                    <RadzenText
                        TagName="TagName.H3"
                        Text=@StringLocalizer["AddEditDoctor_FullName_TextBox_Label"]
                        TextStyle="TextStyle.Subtitle2">
                    </RadzenText>

                    <RadzenTextBox
                        @bind-Value="@Model.FullName"
                        AutoComplete="false"
                        Class="w-100 d-block"
                        MaxLength="200"
                        Name="FullName"
                        Placeholder=@StringLocalizer["AddEditDoctor_FullName_TextBox_PlaceHolder"]>
                    </RadzenTextBox>

                    <RadzenRequiredValidator
                        Class="rz-message rz-messages-error position-absolute"
                        Component="FullName"
                        Text=@StringLocalizer["AddEditDoctor_FullName_TextBox_RequiredMessage"]>
                    </RadzenRequiredValidator>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <RadzenButton
                BusyText=@StringLocalizer["AddEditDoctor_Save_Button_BusyText"]
                ButtonStyle="ButtonStyle.Success"
                ButtonType="ButtonType.Submit"
                Class="w-100"
                Icon="save"
                IsBusy=@IsSaving
                Text=@StringLocalizer["AddEditDoctor_Save_Button_Text"]>
            </RadzenButton>
        </div>
    </div>

</RadzenTemplateForm>