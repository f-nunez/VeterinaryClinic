<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Clinic Management</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="appointments">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Appointments
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="clients">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Clients
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="doctors">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Doctors
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="patients">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Patients
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="rooms">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Rooms
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
